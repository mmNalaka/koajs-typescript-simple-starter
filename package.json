{
  "name": "koajs-typescript-simple-starter",
  "version": "1.0.0",
  "description": "A simple stater template for KoaJs projects with TypeScript",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "tslint --project tsconfig.json --format stylish",
    "build": "NODE_ENV=production tsc",
    "serve-dev": "ts-node src/index.ts",
    "dev": "nodemon",
    "clean": "rimraf dist",
    "restart": "NODE_ENV=production rimraf dist && yarn build && yarn start",
    "start": "NODE_ENV=production node dist/index.js"
  },
  "author": "Nalaka Manathunga",
  "license": "ISC",
  "dependencies": {
    "http-status-codes": "^1.3.0",
    "kcors": "^2.2.2",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.1",
    "koa-helmet": "^4.0.0",
    "koa-logger": "^3.2.0",
    "koa-pino-logger": "^2.1.3",
    "koa-requestid": "^2.0.1",
    "koa-response-time": "^2.1.0",
    "koa-router": "^7.4.0"
  },
  "devDependencies": {
    "@types/http-status-codes": "^1.2.0",
    "@types/kcors": "^2.2.3",
    "@types/koa": "^2.0.48",
    "@types/koa-bodyparser": "^4.2.1",
    "@types/koa-helmet": "^3.1.2",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-pino-logger": "^2.1.4",
    "@types/koa-requestid": "^2.0.0",
    "@types/koa-response-time": "^2.0.1",
    "@types/koa-router": "^7.0.39",
    "@types/node": "^11.9.0",
    "nodemon": "^1.18.10",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.3.3"
  }
}
